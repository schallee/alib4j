<?xml version="1.0" encoding="UTF-8"?>
<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.darkmist.alib</groupId>
	<version>1.0.1-SNAPSHOT</version>
	<artifactId>parent</artifactId>
	<packaging>pom</packaging>
	<name>alib</name>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<shortGroupName>alib</shortGroupName>
		<slf4j.version>1.5.10</slf4j.version>
		<source.version>1.6</source.version>

		<!-- reporting stuff as there is no central management -->
		<reporting.javadoc.version>2.8.1</reporting.javadoc.version>
		<reporting.javadoc.conf.detectJavaApiLink>true</reporting.javadoc.conf.detectJavaApiLink>
		<reporting.javadoc.conf.detectLinks>true</reporting.javadoc.conf.detectLinks>
		<reporting.javadoc.conf.serialwarn>true</reporting.javadoc.conf.serialwarn>
		<reporting.javadoc.conf.verbose>true</reporting.javadoc.conf.verbose>
		<reporting.pmd.version>2.7.1</reporting.pmd.version>
		<reporting.pmd.linkXref>false</reporting.pmd.linkXref>
		<reporting.pmd.sourceEncoding>${project.build.sourceEncoding}</reporting.pmd.sourceEncoding>
		<reporting.pmd.targetJdk>${source.version}</reporting.pmd.targetJdk>
		<reporting.versions.version>1.3.1</reporting.versions.version>
	</properties>
	<modules>
		<module>core</module>
		<module>servlet</module>
		<module>getpass</module>
		<module>handler</module>
		<module>spring</module>
	</modules>
	<build>
		<defaultGoal>package</defaultGoal>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.3.2</version>
					<configuration>
						<source>${source.version}</source>
						<target>${source.version}</target>
						<showWarnings>true</showWarnings>
						<showDeprecation>true</showDeprecation>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-pmd-plugin</artifactId>
					<version>${reporting.pmd.version}</version>
					<executions>
						<execution>
							<goals>
								<goal>check</goal>
								<goal>cpd-check</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-site-plugin</artifactId>
					<version>3.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencyManagement>
		<dependencies>
			<!-- sub modules -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>core</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<!-- junit -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>3.8.1</version>
			</dependency>

			<!-- slf4j -->
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>jcl-over-slf4j</artifactId>
				<version>${slf4j.version}</version>
				<scope>compile</scope>
			</dependency>

			<!-- commons -->
			<dependency>
				<groupId>commons-logging</groupId>
				<artifactId>commons-logging</artifactId>
				<version>1.1.1</version>
			</dependency>
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>1.4</version>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.4</version>
			</dependency>

			<!-- log4j -->
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>1.2.13</version>
			</dependency>

			<!-- easymock -->
			<dependency>
				<groupId>org.easymock</groupId>
				<artifactId>easymock</artifactId>
				<version>2.5.2</version>
			</dependency>

			<!-- jline -->
			<dependency>
				<groupId>jline</groupId>
				<artifactId>jline</artifactId>
				<version>0.9.94</version>
			</dependency>

			<!-- spring -->
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring</artifactId>
				<version>2.5.6</version>
			</dependency>

			<!-- standard -->
			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.4</version>
			</dependency>

		</dependencies>
	</dependencyManagement>
	<description>A library of java utils...</description>
	<url>https://github.com/schallee/alib4j</url>
	<scm>
		<connection>scm:git://github.com/schallee/alib4j.git</connection>
		<developerConnection>scm:git:git@github.com/schallee/alib4j.git</developerConnection>
		<url>http://github.com/schallee/alib4j.git</url>
	</scm>
	<issueManagement>
		<url>https://github.com/schallee/alib4j/issues</url>
	</issueManagement>
	<licenses>
		<license>
			<name>LGPL</name>
			<url>https://www.gnu.org/licenses/lgpl.html</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>schallee</id>
			<name>Ed Schaller</name>
			<email>s_c_h_a_l_l_e_e@d_a_r_k_m_i_s_t_net</email>
		</developer>
	</developers>
</project>
